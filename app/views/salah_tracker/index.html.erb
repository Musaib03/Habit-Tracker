<!-- app/views/salah_tracker/dashboard.html.erb -->

<div class="navbar">
  <div class="navbar-logo">
    <h1>Salah Tracker</h1>
  </div>
  <div class="navbar-info">
    <span class="user-icon">ğŸ‘¤</span>
    <span class="user-name"><%= current_user.username %></span>
    <span class="current-time"><%= Time.now.strftime("%H:%M %p") %></span>
  </div>
</div>

<div class="dashboard-container">
  <!-- Left Container: Salah Details -->
  <div class="salah-details">
    <h2>Your Salah Details</h2>
    <ul>
      <li><strong>Fajr:</strong> [Track your status]</li>
      <li><strong>Dhuhr:</strong> [Track your status]</li>
      <li><strong>Asr:</strong> [Track your status]</li>
      <li><strong>Maghrib:</strong> [Track your status]</li>
      <li><strong>Isha:</strong> [Track your status]</li>
    </ul>
    <%= link_to "Log out", logout_path, method: :delete, class: "btn btn-primary" %>
  </div>

  <!-- Right Container: Demo Form -->
  <div class="demo-form">
    <h2>Demo Form</h2>
    <form>
      <label for="name">Name:</label>
      <input type="text" id="name" placeholder="Enter your name">
      <label for="email">Email:</label>
      <input type="email" id="email" placeholder="Enter your email">
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
